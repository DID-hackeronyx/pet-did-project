// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id              Int       @default(autoincrement()) @id
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  pvk             String    @unique
  unique_key      String    @unique
  posts           Post[]
  pet             Pet[]
  name            String
}

model Pet {
  id              Int       @default(autoincrement()) @id
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  pvk             String    @unique
  unique_key      String    @unique
  did             String    @unique
  userId          Int
  user            User      @relation(fields: [userId], references: [id])
  vc              VC[]
  isListing       Boolean
  image_Url       String
}

model Post{
  id              Int       @default(autoincrement()) @id
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  userId          Int
  user            User      @relation(fields: [userId], references: [id])
  title           String
  content         String
}

model VC{
  id              Int       @default(autoincrement()) @id
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  petId           Int
  pet             Pet      @relation(fields: [petId], references: [id])
  name            String
  r_date          String
  m_records       String
  did             String       
}